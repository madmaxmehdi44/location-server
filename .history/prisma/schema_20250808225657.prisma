// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(cuid())
  username     String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  locations    Location[]
}

model Location {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  lat       Float
  lng       Float
  accuracy  Float?
  createdAt DateTime @default(now())
}
